@model Assignment_1.Models.AddActivityViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Activity</title>
   <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Edit Activity</h1>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="form-label">Student Id</label>
                <input type="text" class="form-control" asp-for="StudentId" readonly />
            </div>
            <div class="form-group">
                <label class="form-label">Subject</label>
                <input type="text" class="form-control" asp-for="Subject" required />
            </div>
            <div class="form-group">
                <label class="form-label">Current Knowledge</label>
                <input type="text" class="form-control" asp-for="CurrentKnowledge" required />
            </div>
            <div class="form-group">
                <label class="form-label">Date</label>
                <input type="date" class="form-control" asp-for="Date" required />
            </div>
            <div class="form-group">
                <label class="form-label">Study Duration</label>
                <div class="row">
                    <div class="col">
                        <input type="number" class="form-control" asp-for="StudyHours" placeholder="Hours" required />
                    </div>
                    <div class="col">
                        <input type="number" class="form-control" asp-for="StudyMinutes" placeholder="Minutes" required />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label">Break Duration</label>
                <div class="row">
                    <div class="col">
                        <input type="number" class="form-control" asp-for="BreakHours" placeholder="Hours" required />
                    </div>
                    <div class="col">
                        <input type="number" class="form-control" asp-for="BreakMinutes" placeholder="Minutes" required />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/StudentActivity/List" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>

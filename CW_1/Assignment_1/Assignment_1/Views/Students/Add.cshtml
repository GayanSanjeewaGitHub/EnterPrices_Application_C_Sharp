@model Assignment_1.Models.AddStudentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
     <form  method="post">
      <div class="container mt-5">
        <h1>Add Student</h1>

            <div class="form-group">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required  asp-for="Name"/>
            </div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required asp-for="Email" />
            </div>

             <div class="form-group">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" required   asp-for="Phone"  />
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="subscribed" name="subscribed"   asp-for="Subscribed"  />
                <label class="form-check-label" for="subscribed">Subscribed</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>


